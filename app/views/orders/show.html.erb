<section class="orders-show">

<h1>Order #<%= @order.id %></h1>

<div class="order-summary jumbotron">
<h4>Thank you for your order!</h4>
<header class="page-header">
  <h3><%= @order.email %></h3>
  <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Quantity</th>
          <th>Unit Price</th>
        </tr>
      </thead>
  <tbody><% @order.line_items.each do|item| %>
    <tr>
    <td><%= image_tag(item.product.image.tiny) %></td>
    <td><%= item.product.name%>
    <%= item.product.description %></td>
    <td><%= item.quantity %></td>
    <td><%= humanized_money_with_symbol item.total_price_cents.to_f / 100 %></td>
    <%end%>
    </tr>
  </tbody>
</header>
  </div>

  <tfoot>
  <tr>
    <th colspan="3">
      TOTAL:
    </th>
    <th>
      <%= humanized_money_with_symbol @order.total_cents.to_f / 100 %>
    </th>
  </tr>
</tfoot>
</table>
</section>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>
